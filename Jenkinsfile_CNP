#!groovy

@Library("Infrastructure")

def type = "angular"
def product = "darts"
def component = "portal"

def yarnBuilder = new uk.gov.hmcts.contino.YarnBuilder(this)
def branchesToSync = ['demo']

withPipeline(type, product, component) {
  enableSlackNotifications('#darts-builds')

  afterAlways('build') {
    yarnBuilder.yarn('rebuild puppeteer')
    yarnBuilder.yarn('build')
  }

  afterAlways('checkout') {
    sh "yarn install"
    echo 'Yarn install complete'
  }

  afterAlways('functionalTest:dev') {
    yarnBuilder.yarn('test:functional:combine:reports')
    steps.archiveArtifacts allowEmptyArchive: true, artifacts: 'functional-output/**/*'
  }

  afterAlways('functionalTest:stg') {
    yarnBuilder.yarn('test:functional:combine:reports')
    steps.archiveArtifacts allowEmptyArchive: true, artifacts: 'functional-output/**/*'
  }

  syncBranchesWithMaster(branchesToSync)
}